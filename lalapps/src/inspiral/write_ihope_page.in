  # filename of the pictures.
  if fnames is not None:
    page.add("<pre>Source: "+dir+"\n" )
    for fnam in fnames:
      page.add(fnam.replace("\n",""))
    page.add("</pre>")

  page.div.close()

  #check that the file exsits. If not, returns an error message
  return page

